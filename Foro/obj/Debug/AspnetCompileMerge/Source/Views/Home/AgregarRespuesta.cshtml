
@{
    ViewBag.Title = "AgregarRespuesta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int idPregunta = ViewBag.idPregunta;
    var usuario = (Foro.Models.ContentSessionExterno)Session[System.Configuration.ConfigurationManager.AppSettings["SesionHelperEnLinea"] as string];
}

<main>
    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            Agregar Respuesta
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="row">
        <div class="col-xl-12">
            <div class="card mb-4">
                <div class="card-header">
                    Agregar Pregunta
                </div>
                <input hidden id="hdnIdUsuario" value="@usuario.Usuario.idUsuario" />
                <input hidden id="hdnIdPregunta" value="@idPregunta" />
                <div class="card-body">
                    <div class="form-body">
                        <form>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-4">
                                    Escribe una respuesta:
                                    <input type="text" class="form-control" id="txtRespuesta" />
                                    <span id="val-cons-respuesta" class="text-danger" hidden>La respuesta es obligatoria</span>
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-4">
                                    <button class="btn btn-success" id="btnGuardarRespuesta" type="button">
                                        Guardar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@Scripts.Render("~/Content/Api")
